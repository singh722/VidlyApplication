@model Vidly.Models.MovieModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
<table>
    <thead>
        <tr>
            <th><h2>Movie</h2></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td><h4>@Html.ActionLink(movie.Value.Name, "Details", "Movies", new { id = movie.Value.Id }, null)</h4></td>
            </tr>
        }
    </tbody>
</table>

